/* pages/detail/detail.wxss */
.container{
  padding:0;
}
.container swiper{
  width:100%;
  height:485rpx;
}
.slide-image{
  width:100%;
  height:100%;
}
.detail{
  width:100%;
  height:380rpx;
  padding:0 50rpx;
  background:#f3eff0;
  box-sizing: border-box;
}
.detail text{
  width:100%;
  height:123rpx;
  line-height:123rpx;
  display:block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail .goodpri{
  overflow:hidden;
}
.detail .newpri{
  float:left;
  width:150rpx;
  display: inline;
  color:#d31112;
}
.detail .oldpri{
  float:left;
  width:150rpx;
   display: inline;
  color:#878787;
  text-decoration: line-through;
}
.button{
  width:100%; 
  height:160rpx;
  overflow:hidden;
}
.button image{
  width:80rpx;
  height:80rpx;
  margin:40rpx;
  display: inline-block;
  float:left;
}
.button text{
  height:160rpx;
  line-height:160rpx;
  display: inline-block;
  float:left;
}
.addcart{
  width:100%;
  height:160rpx;
  background:#a3a3a3;
}
.addcart button{
  width:500rpx;
  height:120rpx;
  background:#a61817;
  color:#fff;
  margin-top:20rpx;
  line-height:120rpx;
}