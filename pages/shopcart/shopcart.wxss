/* pages/shopcart/shopcart.wxss */
.container{
  padding:0;
  font-family: "微软雅黑";
}
.head{
  width:100%;
  height:100rpx;
  background:#747474;
  line-height:100rpx;
  color:#fff;
  padding:0 20rpx;
  box-sizing: border-box;
}
.totalmon{
  margin-left:30rpx;
}
.mon{
  color:#a91b1a;
}
.cartlist{
  width:100%;
  height:300rpx;
  border-bottom:2rpx solid #aaa;
  overflow:hidden;
}
.cartlist image{
  width:260rpx;
  height:260rpx;
  margin:30rpx;
  float:left;
}
.txt{
  width:430rpx;
  height:300rpx;
  float:right;
  padding:30rpx 0;
  box-sizing: border-box;
}
.goodet{
   width:380rpx;
   white-space: nowrap;
   text-overflow: ellipsis;
   overflow: hidden;
   height:65rpx;
   display:block;
   font-size:34rpx;
}
.pri{
  color:#a91b1a;
}
.goodet button{
  width:70rpx;
  height:50rpx;
  background:#989898;
  display: inline-block;
  color:#fff;
  margin:7rpx;
  padding:0;
  line-height: 50rpx;
  text-align: center;
  position:absolute;
  top:0rpx;
  left:90rpx;
}
.goodet .plus{
  left:270rpx;
}
.goodet input{
  width:80rpx;
  height:50rpx;
  display:inline-block;
  border:1rpx solid #ccc;
  text-align: center;
  border-radius:5rpx;
  position:absolute;
  top:0rpx;
  left:180rpx;
}
.martop{
  overflow:hidden;
  position:relative;
}