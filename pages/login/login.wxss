/* pages/login/login.wxss */
page{
   background:#f3eff0;
}
page .container{
  padding-top:100rpx;
}
.container .box{
  background:#fff;
  width:650rpx;
  height:100rpx;
  margin-bottom:20rpx;
  line-height:100rpx;
  padding-left:20rpx;
  border-radius:10rpx;
}
.container .box input{
  width:100%;
  height:100rpx;
}
.container .showpwd{
  width:650rpx;
  margin-top:50rpx;
}
.container .showpwd checkbox{
  float:left;
}
.container .showpwd .showpwdtext{
  float:left;
  padding-top:5rpx;
}
.container .showpwd navigator{
  float:left;
  padding-top:5rpx;
  margin-left:50rpx;
  color:#fd487b;
}
.container .rempwd{
  width:650rpx;
  margin-top:50rpx;
}
.container .rempwd checkbox{
  float:left;
}
.container .rempwd .showpwdtext{
  float:left;
  padding-top:5rpx;
}
.container .login{
  width:650rpx;
  height:100rpx;
  margin-top:50rpx;
}
.container .login button{
  width:650rpx;
  height:90rpx;
  background:#d5090a;
  color:#fff;
  line-height:90rpx;
  letter-spacing: 10rpx;
}
.container .toregister{
  width:650rpx;
  height:100rpx;
  margin-top:20rpx;
}
.container .toregister button{
  width:650rpx;
  height:90rpx;
  background:#4a4a4a;
  color:#fff;
  letter-spacing: 10rpx;
  line-height:90rpx;
}